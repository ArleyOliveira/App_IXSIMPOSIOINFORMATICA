<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifnmg.ixsimposioinformatica" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InformacaoActivity"
            android:label="@string/title_activity_informacao"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".InformacoesActivity"
            android:label="@string/title_activity_informacoes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.ifnmg.ixsimposioinformatica.MainActivity" />
        </activity>
        <activity
            android:name=".PalestranteActivity"
            android:label="@string/title_activity_palestrante"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ProgramacaoActivity"
            android:label="@string/title_activity_programacao"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
